<head>
  <title>Upload</title>
 
</head>

<body>
  
  <h1>Upload</h1>
    <form method="POST" action="/upload">
      <div >
        
        <p>To upload a movie, please fill in the form below.</p>

        <hr />
        <label for="title"><b>Title</b></label>
        <input
          type="text"
          placeholder="Enter movie title"
          name="title"
          id="title"
          required
        />

        <br />
        <label for=""><b>Poster link</b></label>
        <input type="text" name="poster" id="poster" size="100%" />
        <br />

        <label for="directors"><b>Director(s)</b></label>
        <input
          type="text"
          placeholder="Enter name of director (if there's more than one, separate using commas)"
          name="directors"
          id="directors"
          size="100%"
          required
        />
        <br />

        <label for="cast"><b>Actors</b></label>

        <input
          type="text"
          placeholder="Enter actors (separate actor names with commas)"
          name="actors"
          id="actors"
          size="100%"
          required
        />
        <br />

        <label for="genres"><b>Genres</b></label>

        <input
          type="text"
          placeholder="Enter genres"
          name="genres"
          id="genres"
          required
        />

        <br />
        <label><b>Runtime (in minutes)</b></label>
        <input
          type="number"
          placeholder="Enter runtime (minutes)"
          name="runtime"
          id="runtime"
          required
        />
        <br />
        <label><b>Year of release:</b></label>
        <input
          type="number"
          placeholder="Enter year of release"
          name="year"
          id="year"
          required
        />

        <br />
        <label><b>Plot Summary:</b></label>
        <textarea
          type="text"
          placeholder="Enter summary"
          name="summary"
          id="summary"
          style="width: 100%"
          rows="10"
          required
        ></textarea>

        <br />
        <label><b>Age Rating:</b></label>

        <select name="rating" id="ageRating">
          <option value="G" id="Grating">G</option>
          <option value="PG" id="PGrating">PG</option>
          <option value="M" id="Mrating">M</option>
          <option value="R13" id="R13rating">R13</option>
          <option value="R16" id="R16rating">R16</option>
          <option value="R18" id="R18rating">R18</option>
        </select>
        <br />

        <label><b>Price:</b></label>
        <input
          type="number"
          placeholder="Enter price"
          name="price"
          id="price"
          required
        />
        <br />

        <label><b>Trailer:</b></label>
        <input
          type="text"
          placeholder="Enter youtube link (embed)"
          name="trailer"
          id="trailer"
          style="width: 100%"
        />
        <br />

        <hr />

        <!-- <button onclick="addMovie()" //type="submit" //class="registerbtn"
        >
          Upload
        </button> -->
        <button onclick="addMovie()" type="submit" class="registerbtn">
          Upload
        </button>

    </form>
  </div>
</body>

